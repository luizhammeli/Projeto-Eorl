<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MenuActivity"
    tools:showIn="@layout/app_bar_activity_menu">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:gravity="top|bottom|center"
        android:layout_marginTop="5dp"
        android:id="@+id/layout1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/diagnostico"
            android:background="@color/colorBackGround"
            android:clickable="true"
            android:onClick="sentToDiagnosisActivity"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgButtonCalculadora"
            android:src="@drawable/calculadora"
            android:background="@color/colorBackGroundButtonMenu"
            android:layout_marginLeft="5dp"
            android:onClick="sendToCalculatorWeightActivity"
            />

        <ImageButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/imgButton"
               android:src="@drawable/bulario"
               android:background="@color/colorBackGround"
               android:contextClickable="true"
               android:layout_marginLeft="5dp"
            android:onClick="sendToDrugListActivity"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:gravity="top|bottom|center"
        android:id="@+id/layout2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:src="@drawable/notas"
            android:background="@color/colorBackGround"
            android:onClick="sendToNoteActivity"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgButtonCalculadora2"
            android:src="@drawable/radio"
            android:background="@color/colorBackGroundButtonMenu"
            android:layout_marginLeft="5dp"
            android:onClick="sendToTadActivity"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgButton2"
            android:src="@drawable/faq"
            android:background="@color/colorBackGround"
            android:contextClickable="true"
            android:layout_marginLeft="5dp"
            android:onClick="sendToFaqActivity"/>

    </LinearLayout>

</RelativeLayout>
